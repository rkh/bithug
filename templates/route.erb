Takes name of routes file and a list of routes.

@@ routes/:name.rb
module Project
  class Routes < Sinatra::Base
<% args.each do |path| %>

  get '/<%= path %>/?' do
      haml <%= name.to_sym.inspect %>
    end
<% end %>

  end
end

@@ spec/project/routes/:name_spec.rb
# require_relative "../spec_helper.rb" in ruby 1.9
require File.expand_path(File.join(File.dirname(__FILE__), "..", "..", "spec_helper.rb"))

describe Project::Routes do
<% args.each do |path| %>
  
  it "responds to <%= path %>" do
    get "/<%= path %>"
    last_response.should be_ok
  end
<% end %>
  
end

